{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["jest"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parser": "@typescript-eslint/parser",
  "rules": {
    // General best practices
    "quotes": [
      2,
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ],
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-empty-function": 2,
    "no-floating-decimal": 2,
    "no-implicit-coercion": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-param-reassign": 2,
    "no-proto": 2,
    "no-unused-expressions": 2,

    "max-classes-per-file": [2, 1],
    "class-methods-use-this": [2, { "exceptMethods": ["render"] }],
    "block-scoped-var": 2,
    "consistent-return": 2,
    "complexity": ["error", 30],
    "curly": ["error", "all"],
    "default-case": 2,
    "no-dupe-class-members": "off",
    "no-alert": 2,
    "no-caller": 2,
    "no-return-assign": 2,
    "no-return-await": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-implied-eval": 2,
    "no-extend-native": 2,
    "no-extra-label": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unmodified-loop-condition": 2,
    "no-useless-call": 2,
    "no-useless-catch": 2,
    "no-useless-concat": 2,
    "no-var": 2,
    "no-void": 2,
    "no-with": 2,
    "prefer-promise-reject-errors": 2,
    "prefer-const": 2,
    "prefer-spread": 2,
    "prefer-template": 2,
    "radix": 2,
    "semi": ["error", "always"],
    "eol-last": ["error", "always"],

    "no-label-var": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-use-before-define": 2,
    "no-confusing-arrow": 2,
    "arrow-parens": 2,
    "camelcase": "off",

    // Likely errors
    "no-await-in-loop": 1,
    "no-async-promise-executor": 2,
    "no-misleading-character-class": 2,
    "no-template-curly-in-string": 1,
    "require-atomic-updates": 2,

    // Formatting and TS specifics
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "react/prop-types": 0,
    "react/display-name": 0,
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/indent": ["error", 2],
    "@typescript-eslint/camelcase": [
      "error",
      { "properties": "never", "ignoreDestructuring": true }
    ]
  }
}
